<%- include('../header') %>

<div class="row">
<div class="col-12">

  <table class="table text-center" style="margin-top: 75px;">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Category</th>
        <th scope="col">SubCategory</th>
        <th scope="col">ExSubCategory</th>
        <th scope="col">actions</th>
        <th scope="col">Current Status</th>
      </tr>
    </thead>
    <tbody>
      <% exsubcategory.map((exsub,i)=> { %>

        <tr>
            <td>
                <%= ++i %>
            </td>
            <td>
                <%= exsub.categoryid.name %>
            </td>
            <td>
                <%= exsub.subcategoryid.subcategory %>
            </td>
            <td>
                <%= exsub.exsubcategory %>
            </td>
            <td>
                <a href="/exsubcategory/deleteexsubcategory?id=<%=exsub.id%>"
                    class="btn btn-danger py-2"
                    style="font-size: 16px !important;">
                    <i class="fa-solid fa-trash-can"></i>
                </a>
                <a href="/exsubcategory/editexsubcategory?id=<%=exsub.id%>"
                    class="btn btn-primary py-1 ms-2 "
                    style="font-size: 20px !important;">
                    <i class="fa-solid fa-pen"></i>
                </a>
            </td>
            
        </tr>

        <% }) %>
    </tbody>
  </table>
</div>
</div>

  <%- include('../footer') %>