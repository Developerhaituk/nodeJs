<body>
    <div class="container">
    <header>
        <div class="d-flex justify-content-between mt-2 py-2">
            <h1>Cart</h1>
            <div class="d-flex">
                <a class="navbar navbar-light bg-light px-3 text-decoration-none me-3" href="/product/viewdata">View Product</a>
                <a class="navbar navbar-light bg-light px-3 text-decoration-none" href="/adminview">Dashboard</a>
            </div>
        </div>
    </header>
            <div class="row">
<form action="/product/updatecart" method="post" >
    <input type="hidden" name="id" value="<%= cart._id %>">
    <input type="text" value="<%= cart.productName %>" disabled>
    <input type="text" value="<%= cart.description %>" disabled>
    <input type="text" value="<%= cart.price %>" disabled>
    <input type="number" name="qty" value="<%= cart.qty %>">
    <input type="file" disabled><img src="../<%= cart.image %>" class="pt-2 rounded card-img-top" style="width: 100px;" alt="...">
    <button type="submit" class="btn btn-primary">submit</button>
</form>
        
            
            </div>
    </div>

